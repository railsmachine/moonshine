+    assert !respond_to?(:missing_method_59398)
+    eval <<-EOF.gsub(/^.*?: /, "")
+     1: set_trace_func(Proc.new { |event, file, lineno, mid, binding, klass|
+     2:   events << [event, mid, klass] if event =~ /call|return/ && mid.to_s =~ /method_missing/
+     3: })
